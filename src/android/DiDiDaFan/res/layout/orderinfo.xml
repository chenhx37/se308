<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/back"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="内容"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/OIshowcontent"
            android:layout_width="fill_parent"
            android:layout_height="36dp"
            android:gravity="center"
            android:text="内容"
            android:textColor="#000000" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="时间"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/OIshowtime"
            android:layout_width="fill_parent"
            android:layout_height="36dp"
            android:gravity="center"
            android:text="时间"
            android:textColor="#000000" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="悬赏"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/OIshowprice"
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:gravity="center"
            android:text="悬赏"
            android:textColor="#000000" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/OIshowPostpeople"
            android:layout_width="fill_parent"
            android:layout_height="32dp"
            android:layout_gravity="fill"
            android:layout_row="0"
            android:background="#83AF9B"
            android:gravity="center"
            android:text="发布者"
            android:textColor="#000000" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_columnSpan="2"
            android:gravity="center"
            android:text="昵称"
            android:textColor="#000000" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="具体昵称"
            android:textColor="#000000" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="手机"
            android:textColor="#000000" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_column="3"
            android:layout_columnSpan="4"
            android:layout_row="2"
            android:gravity="center"
            android:text="具体手机"
            android:textColor="#000000" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1.05"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/OIshowAcceptpeople"
            android:layout_width="fill_parent"
            android:layout_height="39dp"
            android:layout_gravity="fill"
            android:background="#83AF9B"
            android:gravity="center"
            android:text="接单者"
            android:textColor="#000000" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="昵称"
            android:textColor="#000000" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_column="3"
            android:layout_columnSpan="4"
            android:layout_row="1"
            android:gravity="center"
            android:text="具体昵称"
            android:textColor="#000000" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_row="2"
            android:gravity="center"
            android:text="手机"
            android:textColor="#000000" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="具体手机"
            android:textColor="#000000" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#FFC0CB"
        android:paddingBottom="0dp" >

        <ImageButton
            android:id="@+id/OrderInfoMainPageBtn"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.49"
            android:background="#0000"
            android:onClick="OrderInfoMPBtnClick"
            android:scaleType="centerInside"
            android:src="@drawable/mainw" />

        <ImageButton
            android:id="@+id/OrderInfoPublishBtn"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.49"
            android:background="#0000"
            android:onClick="OrderInfoPublishBtnClick"
            android:scaleType="centerInside"
            android:src="@drawable/postw" />

        <ImageButton
            android:id="@+id/OrderInfoNewsBtn"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.49"
            android:background="#0000"
            android:onClick="OrderInfoNewsBtnClick"
            android:scaleType="centerInside"
            android:src="@drawable/messagew" />

    </LinearLayout>

</LinearLayout>
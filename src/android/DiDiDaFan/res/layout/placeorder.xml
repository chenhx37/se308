<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#FFC0CB"
        android:paddingBottom="0dp" >

        <ImageButton
            android:id="@+id/publishMainPageBtn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.33"
            android:background="#0000"
            android:onClick="POMainPublishBtnClick"
            android:scaleType="centerInside"
            android:src="@drawable/mainw" />

        <ImageButton
            android:id="@+id/publishPublishBtn"
            android:layout_width="wrap_content"
            android:layout_height="84dp"
            android:layout_weight="0.33"
            android:background="#0000"
            android:scaleType="centerInside"
            android:src="@drawable/postw" />

        <ImageButton
            android:id="@+id/publishNewsBtn"
            android:layout_width="wrap_content"
            android:layout_height="86dp"
            android:layout_weight="0.33"
            android:background="#0000"
            android:onClick="PONewsPulishBtnClick"
            android:scaleType="centerInside"
            android:src="@drawable/messagew" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:gravity="center"
                android:text="发布订单"
                android:textColor="#000000"
                android:textSize="24dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/LinearLayout01"
            android:layout_alignParentLeft="true"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="70dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="内容"
                android:textColor="#000000"
                android:textSize="18dp" />

            <EditText
                android:id="@+id/POConetntET"
                android:layout_width="230dp"
                android:layout_height="40dp"
                android:layout_above="@+id/linearLayout1"
                android:layout_alignParentLeft="true"
                android:layout_weight="0.65"
                android:ems="10" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/LinearLayout01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/linearLayout3"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/TextView01"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="饭堂"
            android:textColor="#000000"
            android:textSize="18dp" />

        <Spinner
            android:id="@+id/spinnerCantee"
            android:layout_width="180dp"
            android:layout_height="40dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/LinearLayout02"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/LinearLayout01"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/TextView02"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:layout_above="@+id/POConetntET"
            android:layout_alignParentLeft="true"
            android:gravity="center"
            android:text="价格"
            android:textColor="#000000"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/POPriceET"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.08"
            android:ems="10" >

            <requestFocus />
        </EditText>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/LinearLayout02"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textView3"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:layout_above="@+id/POConetntET"
            android:layout_alignParentLeft="true"
            android:gravity="center"
            android:text="悬赏"
            android:textColor="#000000"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/POJewalET"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/linearLayout6"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textView2"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="时间"
            android:textColor="#000000"
            android:textSize="18dp" />

        <Button
            android:id="@+id/selectTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#33FFC0CB"
            android:onClick="selectTimeClick"
            android:text="选择截止时间"
            android:textSize="20dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/linearLayout5"
        android:layout_marginLeft="36dp"
        android:layout_marginTop="36dp"
        android:orientation="horizontal" >

       <Button
           android:id="@+id/placeorderSure"
           android:layout_width="wrap_content"
           android:layout_height="40dp"
           android:layout_marginRight="12dp"
           android:layout_weight="0.49"
           android:background="#FFC0CB"
           android:onClick="PublishAcSureBtnClick"
           android:text="确定"
           android:textSize="20dp" />

        <Button
            android:id="@+id/placeorderCancel"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="36dp"
            android:layout_weight="0.49"
            android:background="#FFC0CB"
            android:onClick="PublishAcCancelBtnClick"
            android:text="取消"
            android:textSize="20dp" />

    </LinearLayout>

</RelativeLayout>
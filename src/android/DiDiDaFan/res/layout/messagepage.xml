<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back"
    android:orientation="vertical" >
    
	 <LinearLayout
	     android:id="@+id/LinearLayout01"
	     android:layout_width="match_parent"
	     android:layout_height="50dp"
	     android:layout_alignParentLeft="true"
	     android:layout_below="@+id/linearLayout2"
	     android:orientation="horizontal" >

		    <TextView
		        android:id="@+id/textView1"
		        android:layout_width="94dp"
		        android:layout_height="50dp"
		        android:gravity="center"
		        android:text="hihi"
		        android:textSize="32dp" />

		    <Button
		        android:id="@+id/btn_message"
		        android:layout_width="80dip"
		        android:layout_height="40dip"
		        android:layout_marginBottom="2dp"
		        android:layout_marginTop="2dp"
		        android:background="@drawable/baike_btn_pink_left_f_96"
		        android:gravity="center"
		        android:text="接单"
		        android:textColor="#df3031"
		        android:textSize="20dp" />

            <Button
                android:id="@+id/btn_call"
                android:layout_width="80dip"
                android:layout_height="40dip"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="2dp"
                android:background="@drawable/baike_btn_trans_right_f_96"
                android:gravity="center"
                android:text="发单"
                android:textColor="#ffffff"
                android:textSize="20dp" />

	</LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
         android:background="#FFC0CB"
        android:paddingBottom="0dp" >

        <ImageButton
            android:id="@+id/MessagePageMPBtn"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:background="#0000"
            android:onClick="MessagePageMPBtnClick"
            android:scaleType="centerInside"
            android:src="@drawable/mainw" />

        <ImageButton
            android:id="@+id/MessagePagePublishBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.40"
            android:background="#0000"
            android:onClick="MessagePagePublishBtnClick"
            android:scaleType="centerInside"
            android:src="@drawable/postw" />

        <ImageButton
            android:id="@+id/MessagePageNewsBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.33"
            android:background="#0000"
            android:scaleType="centerInside"
            android:src="@drawable/messagew" />
    </LinearLayout>

    <ListView
        android:id="@+id/MessagePagelistView"
        android:layout_width="match_parent"
        android:layout_height="352dp"
        android:layout_above="@+id/linearLayout1"
        android:layout_alignParentLeft="true" >
    </ListView>

</RelativeLayout>
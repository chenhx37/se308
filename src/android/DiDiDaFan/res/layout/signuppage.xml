<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/signuppageSignUpBtn"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="70dp"
        android:orientation="horizontal"
        android:paddingLeft="30dp" >

        <TextView
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:text="密码"
            android:textSize="30sp" />

        <EditText
            android:id="@+id/signuppageLoginPassword"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.45"
            android:hint="输入密码"
            android:paddingLeft="30dp"
            android:textSize="30sp"
            android:inputType="textPassword" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/linearLayout1"
        android:layout_marginTop="46dp"
        android:paddingLeft="30dp"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="账号"
            android:textSize="30sp" />

        <EditText
            android:id="@+id/signuppageLoginUser"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.45"
            android:paddingLeft="30dp"
            android:hint="输入用户名"
            android:textSize="30sp" />

    </LinearLayout>

	<TextView
	    android:id="@+id/SUPshowerrorTV"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_alignParentBottom="true"
	    android:layout_alignParentLeft="true"
	    android:layout_marginBottom="91dp"
	    android:text=""
	    android:textSize="24sp" />

	<Button
	    android:id="@+id/signuppageSignUpBtn"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_above="@+id/SUPshowerrorTV"
	    android:layout_centerHorizontal="true"
	    android:layout_marginBottom="35dp"
	    android:layout_weight="0.6"
	    android:background="#FFC0CB"
	    android:onClick="SignUpnewPage"
	    android:text="注册"
	    android:textSize="28dp" />

</RelativeLayout>